<div class="container">
	<div class="row">
		<div class="col-xs-12 text-center" id="top-bar">
			<img src="burger.gif" alt="burger" />
			<h1>EAT A BURGER II</h1>
		</div>
		<div class="col-xs-6 text-center" class="task" id="devourOption">
			<div class="row">
			<p>Choose Your Burger</p>
				{{#each burger_data}}
					{{#unless this.devoured}}
				<div class="col-xs-9 text-center">
					<pre>{{this.id}}. {{this.burger_name}}</pre>
				</div>	
			<div class="col-xs-3 text-center">
				<form method="POST" action="/burgers/update?_method=PUT" class="button-size">
					<input type="hidden" name="burger_id" type="text" value={{this.id}}>
					<br>
					<button type="submit" class="btn btn-default">DEVOUR IT</button>
				</form>
			</div>
			{{/unless}}
			{{/each}}
			</div>
		</div>
	
		<div class="col-xs-6 text-center" class="task" id="wasDevoured">
			<p>Burgers You've Devoured</p>
			{{#each burger_data}}
				{{#if this.devoured}}
					<input class="form-control" type="text" placeholder="{{this.id}}. {{this.burger_name}}" readonly>
				{{/if}}
			{{/each}}
		</div>
	</div>
</div>

<div class="container">
	<div class="row" id="suggestions">
	<p>Don't see any good options listed? Submit a suggestion for future burgers below!</p>
		<div class="col-xs-12 text-center enter_section">
		<form action="/burgers/create" method="POST">
			<input type="text" name="burger_name" class="form-control" value="" id="enter_text">
			<button type="submit" class="btn btn-primary" id="text-center-button">SUBMIT</button>
		</form>
		
		</div>
	</div>
</div>

